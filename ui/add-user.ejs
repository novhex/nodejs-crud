
<%- include tpl/header.ejs %>

	<div class="container">
		<div class="row">
			<div class="col-md-6">

				<% if(error_messages.length){%>
					<div class="alert alert-danger">
						<strong>ERROR!</strong>	
						<p><%= error_messages %></p>
					</div>
					
					<% } %>

				<form method="POST" action="/user/create/" accept-charset="utf-8">

					<div class="form-group">
						<label>Complete Name</label>
						<input type="text" name="complete_name" class="form-control" />
					</div>

					<div class="form-group">
						<label>Email Address</label>
						<input type="email" name="email_add" class="form-control" />
					</div>

					<div class="form-group">
						<button class="btn btn-success" type="submit" name="btn_submit">
							Create new user
						</button>
					</div>
					
				</form>
			</div>
		</div>
	</div>

<%- include tpl/footer.ejs %>