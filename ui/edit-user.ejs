
<%- include tpl/header.ejs %>

	<div class="container">
		<div class="row">
			<div class="col-md-6">

					<% if(error_messages.length){%>
					
					<div class="alert alert-danger">
						<strong>ERROR!</strong>	
						<p><%= error_messages %></p>
					</div>
					
					<% } %>

				<form method="POST" action="/user/update/" accept-charset="utf-8">
					<%
					if(data.length>0){

					for(var i=0; i< data.length; i++){

					%>

					<input type="hidden" name="userid" value="<%= data[i].user_id %>" />

					<div class="form-group">
						<label>Edit Complete Name</label>
						<input type="text" name="complete_name" class="form-control" value="<%= data[i].name %>" />
					</div>

					<div class="form-group">
						<label>Edit Email Address</label>
						<input type="email" name="email_add" class="form-control" value="<%= data[i].email %>" />
					</div>

					<div class="form-group">
						<button class="btn btn-success" type="submit" name="btn_submit">
							Update user
						</button>
					</div>
					<% 	
							}
						}
					%>
				</form>
			</div>
		</div>
	</div>

<%- include tpl/footer.ejs %>